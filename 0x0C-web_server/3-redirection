#!/usr/bin/env bash
# Script that install Nginx and configures:
#   a simple default page.
#   a /redirectme page that redirects to a 301 moved permanently.
 redirect_string="\\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n"
sudo apt-get -y update
sudo apt-get install -y nginx
sudo ufw allow 'Nginx HTTP'
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html
sudo sed -i "17i ${redirect_string}" /etc/nginx/sites-enabled/default
sudo service nginx restart
